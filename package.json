{
	"name": "snake-lsp",
	"description": "A language server for Snake",
	"author": "Harry Merzin and Owen Loveluck",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-extension-samples"
	},
	"publisher": "vscode-samples",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.63.0"
	},
	"activationEvents": [
		"onLanguage:snake"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "snake",
				"aliases": [
					"Snake",
					"snake"
				],
				"extensions": [
					".snake"
				],
				"configuration": "./snake-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "snake",
				"scopeName": "source.snake",
				"path": "./syntaxes/snake.tmLanguage.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Snake LSP",
			"properties": {
				"snakeLanguageServer.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"snakeLanguageServer.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b && cp server/src/*.js server/out/",
		"watch": "tsc -b -w && cp server/src/*.js server/out/",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"build:ocaml": "cd ocaml-js && npm install && cp _build/default/testing.bc.js ../server/src",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^9.1.0",
		"@types/node": "^14.17.0",
		"@typescript-eslint/eslint-plugin": "^5.19.0",
		"@typescript-eslint/parser": "^5.19.0",
		"eslint": "^8.13.0",
		"mocha": "^9.2.1",
		"typescript": "^4.6.3"
	}
}
